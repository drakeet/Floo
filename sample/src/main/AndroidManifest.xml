<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.drakeet.floo.sample">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:allowBackup="false"
        android:theme="@style/AppTheme">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".TargetActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:scheme="@string/scheme"
                    android:host="drakeet.sdk"
                    android:path="/target"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".WebActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:scheme="@string/scheme"
                    android:host="drakeet.sdk"
                    android:path="/web"/>
            </intent-filter>
        </activity>

        <activity android:name=".ContainerActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:scheme="@string/scheme"
                    android:host="m.drakeet.me"
                    android:path="/container"/>
            </intent-filter>
        </activity>

        <activity android:name=".NotRegisteredActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>

                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>

                <data
                    android:scheme="@string/scheme"
                    android:host="m.drakeet.me"
                    android:path="/not_registered"/>
            </intent-filter>
        </activity>

    </application>

</manifest>